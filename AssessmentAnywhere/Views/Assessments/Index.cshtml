@model AssessmentAnywhere.Models.Assessments.IndexModel
@{
    ViewBag.Title = "Assessment Anywhere";
    Layout = "_Layout.cshtml";
}

@section Head
{
    <style type="text/css">
        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
}

<div class="navbar">
    <div class="navbar-inner">
        <div class="container">

            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <a class="brand hidden-desktop" href="#">Actions</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="divider-vertical"></li>
                    <li class="@((Model.TotalCount == 0) ? "active" : "")">
                        <a href="@Url.Action("Create")" id="new-assessment-btn" class="has-tooltip" title="Create a new assessment" data-placement="bottom">
                            <i class='icon-plus'></i>
                            New...
                        </a>
                    </li>
                    <li class="divider-vertical"></li>
                </ul>
                <div class="navbar-form pull-left form-search">
                    <div class="input-append">
                        <input class="input-large search-query" disabled="disabled" type="text" placeholder="Coming soon...">
                        <button type="submit" class="btn disabled">
                            <i class="icon-search"></i>
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    @if (Model.TotalCount > 0)
    {
        <table class="table table-hover table-condensed table-striped">
            <thead>
                <tr>
                    <th>
                        <div class="container-fluid">Assessment Name</div>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assessment in Model.Results)
                {
                    <tr>
                        <td>
                            <div class="container-fluid">
                                @Html.ActionLink(assessment.Name, "Edit", "AssessmentEditor", new { id = assessment.Id }, new { target = "_blank" })
                            </div>
                        </td>
                        <td>
                            <div class="container-fluid">
                                <a href="@Url.Action("Delete", new { id = assessment.Id })" class="btn btn-small btn-danger pull-right" data-assessment-id="@assessment.Id">
                                    <i class="icon-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="span8 offset2">
            <div class="hero-unit">
                <h2>Welcome to Assessment Anywhere</h2>
                <p class="lead">Get started by creating a new assessment by creating a new assessment to put marks into!</p>
                <p>Select "<i class="icon-plus"></i> New..." from the action menu above.</p>
            </div>
        </div>
    }
</div>

<!-- Modal Create -->
<div id="new-assessment-model" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">
            <i class="icon-plus"></i>
            New Assessment
        </h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
                <div class="control-group">
                    <label for="create-name-txt" class="control-label">Assessment Name</label>
                    <div class="controls">
                        <input id="create-name-txt" name="name" type="text" required="required" placeholder="Assessment Name" />
                        <em></em>
                        <span class="help-block">Give your new assessment a helpful, discriptive name.</span>
                    </div>
                </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-primary">Save changes</button>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            @if (Model.TotalCount == 0)
            {
                <text>$('#new-assessment-btn').tooltip({ trigger: 'manual' }).tooltip('show');</text>
            }

            $('.has-tooltip').tooltip();

            $('#new-assessment-btn').click(function() {
                $('#new-assessment-model').modal();
                return false;
            });
        });
    </script>
}