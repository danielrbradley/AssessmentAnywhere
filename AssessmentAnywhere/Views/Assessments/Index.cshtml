@model AssessmentAnywhere.Models.Assessments.IndexModel
@{
    ViewBag.Title = "Index";
    Layout = "_Layout.cshtml";
}

@section Head
{
    <style type="text/css">
        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
}

<div class="row-fluid">
    <div class="span3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">Actions</li>
                <li><a href="@Url.Action("Create")"><i class='icon-plus'></i> New Assessment</a></li>
            </ul>
        </div>
    </div>
    <div class="span9">
        <ul class="nav nav-tabs nav-stacked">
            @foreach (var assessment in Model.Assessments)
            {
                <li>@Html.ActionLink(assessment.Name, "Details", new { id = assessment.Id })</li>
            }
        </ul>
        @if (!Model.Assessments.Any())
        {
            <div class="row-fluid">
                <div class="span8 offset2">
                    <h2>Create your first assessment</h2>
                    <p>Get started by creating a new assessment below.</p>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 well">
                    @using (Html.BeginForm("Create", "Assessments", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <fieldset>
                            <legend>New assessment</legend>
                            <div class="control-group">
                                @Html.Label("Name", "Assessment Name", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBox("Name", "", new { placeholder = "Assessment Name" })
                                    <span class="help-block">Give your new assessment a helpful, discriptive name.</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        }
    </div>
</div>
