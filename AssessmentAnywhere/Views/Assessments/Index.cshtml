@model AssessmentAnywhere.Models.Assessments.IndexModel
@{
    ViewBag.Title = "Index";
    Layout = "_Layout.cshtml";
}

@section Head
{
    <style type="text/css">
        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
}

<div class="navbar">
    <div class="navbar-inner">
        <div class="container">

            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <a class="brand hidden-desktop" href="#">Actions</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="divider-vertical"></li>
                    <li>
                        <a href="@Url.Action("Create")" id="new-assessment-btn" class="has-tooltip" title="Create a new assessment" data-placement="bottom">
                            <i class='icon-plus'></i>
                            New...
                        </a>
                    </li>
                    <li class="divider-vertical"></li>
                </ul>
                <div class="navbar-form pull-left form-search">
                    <div class="input-append">
                        <input class="input-large search-query" type="text" placeholder="Coming soon...">
                        <input type="submit" value="Search" class="btn" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    @if (Model.Assessments.Any())
    {
        <table class="table table-hover table-condensed table-striped">
            <thead>
                <tr>
                    <th>
                        <div class="container-fluid">Assessment Name</div>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assessment in Model.Assessments)
                {
                    <tr>
                        <td>
                            <div class="container-fluid">
                                @Html.ActionLink(assessment.Name, "Edit", "AssessmentEditor", new { id = assessment.Id }, new { target = "_blank" })
                            </div>
                        </td>
                        <td>
                            <div class="container-fluid">
                                <a href="@Url.Action("Delete", new { id = assessment.Id })" class="btn btn-small btn-danger pull-right" data-assessment-id="@assessment.Id">
                                    <i class="icon-remove icon-white"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="span8 offset2">
            <div class="hero-unit">
                <h2>Welcome to Assessment Anywhere</h2>
                <p class="lead">Get started by creating a new assessment by creating a new assessment to put marks into!</p>
                <p>Click the button below or select "New..." from the action menu.</p>
                <div class="pull-right">
                    <a href="@Url.Action("Create")" class="btn btn-success btn-large">
                        <i class="icon-plus icon-white"></i>
                        Create new assessment...
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            @if (!Model.Assessments.Any())
            {
                <text>$('#new-assessment-btn').tooltip({ trigger: 'manual' }).tooltip('show');</text>
            }

            $('.has-tooltip').tooltip();
        });
    </script>
}