@model AssessmentAnywhere.Models.Assessments.IndexModel
@{
    ViewBag.Title = "Index";
    Layout = "_Layout.cshtml";
}

@section Head
{
    <style type="text/css">
        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
}

<div class="row-fluid">
    <div class="span3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">Actions</li>
                <li><a href="@Url.Action("Create")"><i class='icon-plus'></i>New assessment ...</a></li>
            </ul>
        </div>
    </div>
    <div class="span9">
        @if (Model.Assessments.Any())
        {
            <table class="table table-hover table-condensed">
                <tbody>
                    @foreach (var assessment in Model.Assessments)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(assessment.Name, "Edit", new { id = assessment.Id }, new { @style = "display: block" })
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", new { id = assessment.Id })" class="btn btn-small btn-danger pull-right" data-assessment-id="@assessment.Id">
                                    <i class="icon-remove icon-white"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="hero-unit">
                <h2>Welcome to Assessment Anywhere</h2>
                <p class="lead">Get started by creating a new assessment by creating a new assessment to put marks into!</p>
                <p>Click the button below or select "New assessment..." from the menu on the left.</p>
                <div class="pull-right">
                    <a href="@Url.Action("Create", "Assessments")" class="btn btn-success btn-large">
                        <i class="icon-plus icon-white"></i>
                        Create new assessment...
                    </a>
                </div>
            </div>
        }
    </div>
</div>
