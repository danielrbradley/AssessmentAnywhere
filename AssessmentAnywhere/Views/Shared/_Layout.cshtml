<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    @Styles.Render("~/css/bootstrap.min.css")
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    @Styles.Render("~/css/bootstrap-responsive.min.css")
    @Styles.Render("~/css/font-awesome.min.css")
    <!--[if IE 7]>
    @Styles.Render("~/css/font-awesome-ie7.min.css")
    <![endif]-->
    @RenderSection("Head", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.ActionLink("Assessment Anywhere", "Index", "Home", null, new { @class = "brand" })

                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        @if (Request.IsAuthenticated)
                        {
                            <li>
                                <div class="btn-group">
                                    <a href="@Url.Action("SignOut", "Account")" class="btn btn-inverse">
                                        <i class="icon-signout"></i>
                                        Sign out
                                    </a>
                                    <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-inverse dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-user"></i>
                                        <i class="icon-caret-down"></i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li>
                                            <a href="@Url.Action("ChangePassword", "Account")" id="change-password-link">
                                                <i class="icon-lock"></i>
                                                Change Password
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li>
                                <div class="btn-group">
                                    <a href="@Url.Action("SignIn", "Account")" class="btn btn-inverse">
                                        <i class="icon-signin"></i>
                                        Sign in
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/js/bootstrap.min.js")
    @RenderSection("scripts", false)
</body>
</html>
