@model AssessmentAnywhere.Models.GradeBoundaries.DetailsModel

@{
    ViewBag.Title = Model.AssessmentName + "Grade Boundaries";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink(Model.AssessmentName, "Details", "Assessments", new { id = Model.AssessmentId }, null) <span class="divider">/</span></li>
    <li class="active">
    DataGrade Boundaries<li>
</ul>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Grade</th>
            <th>Min Result</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var boundary in Model.Boundaries)
        {
            <tr>
                <td>@boundary.Grade</td>
                <td>
                    <form action="@Url.Action("Update", new { id = Model.AssessmentId, grade = boundary.Grade })" method="POST">
                        <input type="number" name="minResult" value="@boundary.MinResult" />
                    </form>
                </td>
                <td>
                    <form action="@Url.Action("Remove", new { id = Model.AssessmentId, grade = boundary.Grade })" method="POST">
                        <input type="submit" class="btn" value="Remove" />
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td>
                <input form="new-form" type="text" name="grade" /></td>
            <td>
                <input form="new-form" type="number" name="minResult" /></td>
            <td>
                <form id="new-form" action="@Url.Action("Add", new { id = Model.AssessmentId })" method="POST">
                    <input type="submit" class="btn" value="Add" />
                </form>
            </td>
        </tr>
    </tbody>
</table>
